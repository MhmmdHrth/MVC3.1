@model Employee

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-4"></label>
        <div class="col-8">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<DepartmentType>()" class="form-control"></select>
        </div>
    </div>  
    <div class="form-group row">
        <div class="offset-4 col-6">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-6">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>